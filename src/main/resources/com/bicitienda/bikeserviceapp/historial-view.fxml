<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.bicitienda.bikeserviceapp.controller.HistorialController"
            prefWidth="800" prefHeight="500">

    <top>
        <Label text="Historial de Servicios"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 20 0 10 0;"
               BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <TableView fx:id="tablaServicios" prefHeight="400">
            <columns>
                <TableColumn fx:id="colCliente" text="Cliente" prefWidth="180"/>
                <TableColumn fx:id="colTipo" text="Tipo Servicio" prefWidth="150"/>
                <TableColumn fx:id="colFecha" text="Fecha" prefWidth="150"/>
                <TableColumn fx:id="colCosto" text="Costo" prefWidth="100"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10" padding="10">
            <Button text="Actualizar" fx:id="btnActualizar" onAction="#onActualizar"/>
            <Button text="Volver" fx:id="btnVolver" onAction="#onVolver"/>
        </HBox>
    </bottom>

</BorderPane>
